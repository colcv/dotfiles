{
  "diagnostic.errorSign": "",
  "diagnostic.warningSign": "",
  "diagnostic.infoSign": "",
  "diagnostic.hintSign": "",

  "suggest.completionItemKindLabels": {
    "keyword": "  Keyword",
    "variable": "  Variable",
    "value": "  Value",
    "operator": "  Operator",
    "constructor": "  Constructor",
    "function": "  Function",
    "reference": "  Reference",
    "constant": "  Constant",
    "method": "  Method",
    "struct": "  Struct",
    "class": "  Class",
    "interface": "  Interface",
    "text": "  Text",
    "enum": "  Enum",
    "enumMember": "  EnumMember",
    "module": "  Module",
    "color": "  Color",
    "property": "  Property",
    "field": "  Field",
    "unit": "  Unit",
    "event": "  Event",
    "file": "  File",
    "folder": "  Folder",
    "snippet": "  Snippet",
    "typeParameter": "  TypeParameter",
    "default": "  Auto"
  },

  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "json",
    "javascript",
    "javascriptreact",
    "typescript"
  ],

  // lua
  "sumneko-lua.enableNvimLuaDev": true,

  // coc-explorer
  "explorer.width": 40,
  "explorer.icon.expanded": "▸",
  "explorer.icon.collapsed": "▾",
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "nvim-web-devicons",
  "explorer.file.reveal.auto": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.file.column.indent.indentLine": true,
  "explorer.filename.colored.enable": true,
  "explorer.buffer.showHiddenBuffers": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": { "v": "open:vsplit", "x": "open:split" },
  "explorer.focus": false,

  // emmet
  "emmet.includeLanguages": { "javascript": "javascriptreact" },
  "emmet.priority": 95,

  // tsserver
  "javascript.suggest.completeFunctionCalls": false,
  "javascript.suggestionActions.enabled": false,
  "javascript.showUnused": false,

  // prettier
  "prettier.singleQuote": true
}

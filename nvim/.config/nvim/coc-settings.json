  //   "snippet": " Snippet",
  //   "typeParameter": " TypeParameter",
  //   // "default": ""
  //   "default": ""
  // },

  "suggest.completionItemKindLabels": {
    "keyword": "",
    "variable": "",
    "value": "",
    "operator": "",
    "constructor": "",
    "function": "",
    "reference": "",
    "constant": "",
    "method": "",
    "struct": "",
    "class": "",
    "interface": "",
    "text": "",
    "enum": "",
    "enumMember": "",
    "module": "",
    "color": "",
    "property": "",
    "field": "",
    "unit": "",
    "event": "",
    "file": "",
    "folder": "",
    "snippet": "",
    "typeParameter": "",
    // "default": ""
    "default": ""
  },

  "suggest.noselect": false,
  "suggest.selection": "recentlyUsed",
  "suggest.enablePreselect": true,
  "diagnostic.virtualText": false,

  "tree.openedIcon": "",
  "tree.closedIcon": "",
  "tree.key.activeFilter": "/",
  "tree.key.toggle": "o",
  "tree.key.collapseAll": "zM",
  "outline.detailAsDescription": false,
  "outline.showLineNumber": false,
  "outline.autoWidth": true,
  "outline.keepWindow": true,

  "suggest.floatConfig": { "border": true },
  "diagnostic.floatConfig": { "border": true },
  "signature.floatConfig": { "border": true },
  "hover.floatConfig": { "border": true },

  "list.statusLineSegments": [],
  "list.normalMappings": {
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-t>": "action:tabe",
    "<C-j>": "normal:j",
    "<C-k>": "normal:k"
  },
  "list.insertMappings": {
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-t>": "action:tabe"
  },

  "coc.preferences.formatOnSaveFiletypes": [
    "html",
    "css",
    "scss",
    "json",
    "jsonc",
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "lua",
    "vue",
    "yaml"
  ],

  // lua
  "Lua.telemetry.enable": false,
  "Lua.hint.enable": false,
  "sumneko-lua.enableNvimLuaDev": true,
  "stylua.configPath": "/home/colcv/dotfiles/nvim/.config/nvim/stylua.toml",

  // coc-explorer
  "explorer.width": 40,
  "explorer.icon.expanded": "▸",
  "explorer.icon.collapsed": "▾",
  "explorer.icon.enableNerdfont": true,
  "explorer.icon.source": "nvim-web-devicons",
  "explorer.file.reveal.auto": true,
  "explorer.file.showHiddenFiles": true,
  "explorer.file.reveal.filter": {
    "literals": ["node_modules", ".git"]
  },
  "explorer.file.column.indent.indentLine": true,
  "explorer.filename.colored.enable": true,
  "explorer.buffer.showHiddenBuffers": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings.global": {
    "<C-v>": "open:vsplit",
    "<C-s>": "open:split",
    "<C-t>": "open:tab"
  },
  "explorer.focus": false,

  // emmet
  "emmet.priority": 99,

  // tsserver
  "javascript.suggest.completeFunctionCalls": false,
  "typescript.suggest.completeFunctionCalls": false,
  "tsserver.disableAutomaticTypeAcquisition": true,
  "typescript.showUnused": false,
  "tsserver.useLocalTsdk": true,
  "tsserver.log": "normal",

  // css
  "css.lint.unknownAtRules": "ignore",

  // prettier
  "prettier.singleQuote": true,

  // symbol-line
  "symbol-line.separator": " ❯ "
}

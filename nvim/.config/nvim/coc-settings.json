{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    }
  },

  "diagnostic.errorSign": "E",
  "diagnostic.warningSign": "W",
  "diagnostic.infoSign": "I",
  "diagnostic.hintSign": "H",
  "diagnostic.refreshOnInsertMode": false,

  "suggest.completionItemKindLabels": {
    "keyword": "",
    "variable": "",
    "value": "",
    "operator": "",
    "constructor": "",
    "function": "",
    "reference": "",
    "constant": "",
    "method": "",
    "struct": "",
    "class": "",
    "interface": "",
    "text": "",
    "enum": "",
    "enumMember": "",
    "module": "",
    "color": "",
    "property": "",
    "field": "",
    "unit": "",
    "event": "",
    "file": "",
    "folder": "",
    "snippet": "",
    "typeParameter": "",
    // "default": ""
    "default": ""
  },

  "suggest.noselect": false,
  "suggest.selection": "recentlyUsed",
  "suggest.enablePreselect": true,
  "diagnostic.virtualText": false,

  "tree.openedIcon": "",
  "tree.closedIcon": "",
  "tree.key.activeFilter": "/",
  "tree.key.toggle": "o",
  "tree.key.collapseAll": "zM",
  "outline.detailAsDescription": false,
  "outline.showLineNumber": false,
  "outline.autoWidth": true,
  "outline.keepWindow": true,

  "suggest.floatConfig": { "border": false },
  "diagnostic.floatConfig": { "border": false },
  "signature.floatConfig": { "border": false },
  "hover.floatConfig": { "border": false },

  "list.statusLineSegments": [],
  "list.normalMappings": {
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-t>": "action:tabe",
    "<C-j>": "normal:j",
    "<C-k>": "normal:k"
  },
  "list.insertMappings": {
    "<C-v>": "action:vsplit",
    "<C-s>": "action:split",
    "<C-t>": "action:tabe"
  },

  "coc.preferences.formatOnSave": true,

  // lua
  "Lua.hint.enable": false,
  "sumneko-lua.enableNvimLuaDev": true,
  "stylua.configPath": "/home/colcv/dotfiles/nvim/.config/nvim/stylua.toml",
  // "stylua.configPath": "./stylua.toml",

  // emmet
  "emmet.priority": 99,

  // tsserver
  "javascript.suggest.completeFunctionCalls": false,
  "typescript.suggest.completeFunctionCalls": false,
  "tsserver.disableAutomaticTypeAcquisition": true,
  "typescript.showUnused": false,
  "tsserver.useLocalTsdk": true,
  "tsserver.log": "normal",

  // css
  "css.lint.unknownAtRules": "ignore",

  // prettier
  "prettier.singleQuote": true,

  // symbol-line
  "symbol-line.separator": " ❯ ",

  // solargraph
  "solargraph.diagnostics": true,
  "solargraph.formatting": true
}
